@using Blazorise
@using librarwebapp.Models.ExternalServices.Library

@if (Book != null)
{
    <MudCard>
        <MudCardMedia Image="https://marketplace.canva.com/EAFutLMZJKs/1/0/1003w/canva-portada-libro-novela-suspenso-elegante-negro-wxuYB_sJtMw.jpg" Height="200" />
        <MudCardContent>
            <MudText Typo="Typo.h5">@Book.Title</MudText>
            <MudText Typo="Typo.body2">@Book.Authors</MudText>
        </MudCardContent>
        @if (TieneSuscripcionValida)
        {
            <MudCardActions>
                <MudLink Variant="Variant.Text" Color="MudBlazor.Color.Primary" Href=@($"/Book/Viewer/{Book.Id}")>Leer</MudLink>
            </MudCardActions>
        }
    </MudCard>
}

@code {
    [Parameter] public bool TieneSuscripcionValida { get; set; }
    [Parameter] public BookModel Book { get; set; }
}
